{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs",
    ".eslintrc.js",
    "*.config.js",
    "*.config.ts",
    "**/*.config.js",
    "**/*.config.ts",
    "**/*.config.mjs",
    "**/gulpfile.js",
    "**/jest.config.js",
    "**/babel.config.js",
    "**/webpack.config.js",
    "**/tailwind.config.js",
    "**/postcss.config.js",
    "**/postcss.config.mjs",
    "**/playwright.config.ts",
    "**/sidebars.js",
    "**/docusaurus.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "lib",
    "coverage",
    ".next",
    "storybook-static"
  ]
}
