{
  "$schema": "http://json.schemastore.org/tsconfig",
  "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.tsx", "src/**/*.json"],
  "exclude": ["**/node_modules"],
  "compilerOptions": {
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "types": ["node", "jest"],
    "skipLibCheck": true
  }
}
