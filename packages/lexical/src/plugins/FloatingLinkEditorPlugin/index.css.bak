.link-editor {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  max-width: 400px;
  width: 100%;
  opacity: 0;
  background-color: var(--vscode-editorWidget-background, #fff);
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3);
  border-radius: 8px;
  transition: opacity 0.5s;
  will-change: transform;
}

.link-editor .link-editor-row {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 8px 12px;
}

.link-editor .link-input {
  flex: 1;
  box-sizing: border-box;
  padding: 8px 12px;
  border-radius: 15px;
  background-color: var(--vscode-input-background, #eee);
  font-size: 15px;
  color: var(--vscode-input-foreground, rgb(5, 5, 5));
  border: 0;
  outline: 0;
  font-family: inherit;
}

.link-editor .link-view {
  flex: 1;
  padding: 8px 12px;
  border-radius: 15px;
  font-size: 15px;
  color: var(--vscode-editorWidget-foreground, rgb(5, 5, 5));
  border: 0;
  outline: 0;
  font-family: inherit;
}

.link-editor .link-view a {
  display: block;
  word-break: break-word;
  width: 100%;
  color: var(--vscode-textLink-foreground, rgb(33, 111, 219));
  text-decoration: none;
}

.link-editor .link-view a:hover {
  text-decoration: underline;
}

