{
  "name": "datalayer-jupyter-vscode",
  "displayName": "Datalayer Notebook",
  "description": "A Jupyter Notebook Editor for VS Code",
  "publisher": "Datalayer",
  "version": "0.0.1",
  "icon": "images/datalayer-logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/datalayer/jupyter-ui.git",
    "directory": "packages/vscode"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Data Science"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "datalayer.notebook.new",
        "title": "Create new Datalayer Notebook",
        "category": "Notebook"
      }
    ],
    "customEditors": [
      {
        "viewType": "datalayer.notebook",
        "displayName": "Datalayer Notebook",
        "selector": [
          {
            "filenamePattern": "*.ipynb"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "vsix": "npx @vscode/vsce package --no-yarn --no-dependencies"
  },
  "dependencies": {
    "@datalayer/jupyter-react": "^0.20.2",
    "@jupyterlab/services": "^7.0.0",
    "@lumino/coreutils": "^2.1.1",
    "@primer/react": "36.27.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typestyle": "^2.0.4",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "18.2.12",
    "@types/react-dom": "18.2.5",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/vsce": "3.3.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "css-loader": "5.1.3",
    "eslint": "^9.21.0",
    "mini-svg-data-uri": "^1.4.4",
    "process": "^0.11.10",
    "style-loader": "2.0.0",
    "svg-inline-loader": "^0.8.2",
    "ts-loader": "^9.5.2",
    "typescript": "5.0.3",
    "webpack": "5.98.0",
    "webpack-cli": "6.0.1"
  }
}
